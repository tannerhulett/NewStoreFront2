@model NewStoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Edit Category- " + Model.CategoryName;
}

<h1>@ViewData["Title"]</h1>

@*<h4>Category</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                @*<input asp-for="CategoryName" class="form-control" />*@
                <textarea asp-for="CategoryDescription" class="form-control"></textarea>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary d-inline-flex" />
                <a asp-action="Index" class="btn btn-secondary d-inline-flex btn-lg">Back to List</a>
    @*<a asp-action="Index">Back to List</a>*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
