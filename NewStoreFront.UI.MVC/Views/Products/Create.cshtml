@model NewStoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Add New <span>Products</span>
            </h2>
        </div>

        @*<h4>Product</h4>*@
        <hr />
        <div class="row">
            <div class="col-md-6 offset-3">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductDescription" class="control-label"></label>
                        @*<input asp-for="ProductDescription" class="form-control" />*@
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitsInStock" class="control-label"></label>
                        <input asp-for="UnitsInStock" class="form-control" />
                        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitsOnOrder" class="control-label"></label>
                        <input asp-for="UnitsOnOrder" class="form-control" />
                        <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierId" class="control-label">Supplier</label>
                        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    </div>
                    <div class="form-group">

                        <img src="~/img/noimage.png" id="Img" class="img-fluid d-block" style="max-height: 500px" />
                        <label asp-for="ProductImage" class="control-label"></label>
                        @*<input asp-for="ProductImage" class="form-control" />*@
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary d-inline-flex" />
                        <a asp-action="TiledProducts" class="btn btn-secondary d-inline-flex btn-lg">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("file-btn").onchange = function (evt) {
            var tgt = evt.target || window.event.srcElement,
                files = tgt.files;

            if (FileReader && files && files.length) {
                var fr = new FileReader();
                fr.onload = function () {
                    document.getElementById("img").src = fr.result;
                }
                fr.readAsDataURL(files[0]);
            }
        }
    </script>
}
